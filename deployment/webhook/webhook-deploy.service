[Unit]
Description=GitHub Webhook Deployment Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/saas-agents-ia
ExecStart=/usr/bin/node /opt/saas-agents-ia/deployment/webhook/webhook-receiver.js
Restart=always
RestartSec=10

# Variables d'environnement
Environment="WEBHOOK_PORT=9000"
Environment="WEBHOOK_SECRET=CHANGE_ME_IN_ENV_FILE"

# Logs
StandardOutput=append:/var/log/webhook-deployment.log
StandardError=append:/var/log/webhook-deployment.log

# Sécurité
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
